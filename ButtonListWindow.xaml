<Window x:Class="Gui_client.ButtonListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Button List" Height="450" Width="800">
    <Grid Margin="20">
        <ListView x:Name="ButtonListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}" Margin="0 0 0 10" Width="150" Height="30" Click="Button_Click" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
